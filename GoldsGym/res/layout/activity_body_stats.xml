<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

     <TextView 
	        android:id="@+id/body_note"       
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/body_note"
	        android:textSize="@dimen/big_title"
	        android:paddingTop="@dimen/title_padding"
	        android:paddingLeft="@dimen/title_padding"
	        android:paddingRight="@dimen/title_padding"
	        android:textColor="@color/gray_text"       
	 />
     
    <TextView 
	        android:id="@+id/body_sub_note"       
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text=""
	        android:textSize="@dimen/medium_title"
	        android:paddingBottom="@dimen/title_padding"
	        android:textColor="@color/blue_text"  
	        android:textStyle="italic"     
	 />

     <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_1"	
	 />
     
     <LinearLayout
        android:id="@+id/height_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/height_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.4"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/height_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_1"
	    	/>
        <EditText
            android:id="@+id/feet_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.1"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/small_padding"
	        android:paddingRight="@dimen/small_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType = "number"
            android:maxLength="1"
            android:nextFocusDown="@+id/inches_text"
         	/>
        <TextView
            android:id="@+id/feet_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.12"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/zero_padding"
	        android:paddingRight="@dimen/zero_padding"
	        android:text="@string/feet_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <EditText
            android:id="@+id/inches_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.15"
			android:layout_marginLeft="@dimen/small_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/small_padding"
	        android:paddingRight="@dimen/small_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType = "number"
            android:maxLength="2"
            android:nextFocusDown="@+id/weight_text"
         	/>
        <TextView
            android:id="@+id/inches_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.2"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/zero_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/inches_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_2"	
	 />
    <LinearLayout
        android:id="@+id/weight_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/weight_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.4"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/weight_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_2"
	    	/>
        <EditText
            android:id="@+id/weight_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.2"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/zero_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType="numberDecimal"
            android:digits="0123456789."
        	android:nextFocusDown="@+id/bmi_bar"
    		android:imeOptions="actionDone"
            android:maxLength="5"
         	/>
        <TextView
            android:id="@+id/kgs_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.4"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/kgs_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_3"	
	 />
   

    <SeekBar
            android:id="@+id/bmi_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/bmi_bar"
            android:secondaryProgress="0"
            android:paddingTop="30dp"
            />
    
    <ImageView 
            android:id="@+id/bmi_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
	        android:src="@drawable/bmi"
	        android:contentDescription="@string/bmi_image"
        />

    
    
</LinearLayout>
</ScrollView>