		        />
  </RelativeLayout>
  
  
    <!-- BED TIME SECTION -->
  <RelativeLayout
      android:id="@+id/bedtime_relative_layout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/mini_padding"
      android:paddingRight="@dimen/mini_padding"
   >
		    <TextView 
		        android:id="@+id/bedtime_title"       
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:text="@string/bedtime_title"
		        android:textSize="@dimen/big_title"
