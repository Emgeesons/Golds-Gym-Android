			    android:layout_toRightOf="@id/snacks_skip"
		     />
		    
			  <Spinner
				    android:id="@+id/snacks_spinner_1_1"
				    android:layout_width="200dp"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/snacks_title"
