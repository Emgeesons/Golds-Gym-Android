		        	android:paddingLeft="@dimen/mini_padding" 
		        	android:paddingTop="@dimen/small_padding"
		        />
  </RelativeLayout>
  
   <!-- DINNER SECTION -->
  <RelativeLayout
      android:id="@+id/dinner_relative_layout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
