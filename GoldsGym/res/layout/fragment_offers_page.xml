<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offers_pager_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
>
    
    <ImageView 
	        android:id="@+id/offer_image"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"   
	        android:background="@drawable/welcome_bg"
	        android:contentDescription="@string/offers_image"
	        android:paddingBottom="@dimen/mini_padding"
	/>
	
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="215dp"
	    android:fillViewport="true"
	    android:orientation="vertical" >
	    
	    <LinearLayout 
	        android:id="@+id/text_offer_pager_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/offers_background_color"
	        android:layout_marginBottom="@dimen/small_padding"
	        android:orientation="vertical"
	        
         > 
         <TextView 
			android:id="@+id/offer_title"
            android:paddingTop="@dimen/title_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_title"
	        android:paddingLeft="@dimen/title_padding"
            android:textStyle="bold"
            android:paddingRight="@dimen/small_padding"
		 />
         <TextView 
			android:id="@+id/offer_description"
            android:paddingTop="@dimen/cell_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_small_title"
            android:textColor="@color/offers_gray_text"
	        android:paddingLeft="@dimen/title_padding"
	        android:paddingRight="@dimen/small_padding"
		 />
         <ImageView 
	        android:id="@+id/delimiter_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"   
            android:layout_gravity="center_horizontal" 
            android:paddingTop="@dimen/cell_padding"
            android:paddingBottom="@dimen/cell_padding"
	        android:src="@drawable/divider_offers"
	        android:contentDescription="@string/delimiter_description"
	        android:paddingLeft="@dimen/title_padding"
	     />
         </LinearLayout>
	</ScrollView>
	<ImageView 
	        android:id="@+id/text_shadow_image"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"   
	        android:src="@drawable/shadow_offers"
	        android:contentDescription="@string/text_shadow_image"
	 />
    
 </LinearLayout>   