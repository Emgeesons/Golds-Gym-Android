<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
<LinearLayout
    android:id="@+id/parent_layout_about_user"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView 
	        android:id="@+id/welcomeNote"       
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/welcome_note"
	        android:textSize="@dimen/big_title"
	        android:paddingTop="@dimen/title_padding"
	        android:paddingBottom="@dimen/title_padding"
	        android:textColor="@color/gray_text"       
	 />
	<View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_1"	
	 />
    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/name_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.37"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/name_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_1"
	    	/>
        <EditText
            android:id="@+id/name_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.6"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/zero_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType="textCapWords"
            android:maxLength="50"
         	/>
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_2"	
	 />
        <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/email_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.37"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/email_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_6"
	    	/>
        <EditText
            android:id="@+id/email_text1"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.6"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/zero_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType = "textEmailAddress"
         	/>
        
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_6"	
	 />
     <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/number_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.37"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/number_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"	        
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_1"
	    	/>
        <EditText
            android:id="@+id/number_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.6"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/zero_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType="number"
            android:maxLength="14"
         	/>
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_3"	
	 />
     <LinearLayout
        android:id="@+id/area_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/area_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.37"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/area_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"	        
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_5"
	    	/>
        <EditText
            android:id="@+id/area_text"       
            android:layout_width="0px"
            android:layout_height="fill_parent"        
            android:layout_weight="0.6"
			android:layout_marginLeft="@dimen/cell_padding"
            android:paddingTop = "@dimen/zero_padding"
	        android:paddingBottom = "@dimen/zero_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/zero_padding"
            android:textColor="@color/black_text"
            android:textSize="@dimen/medium_title"
            android:inputType="textCapWords"
            android:maxLength="50"
         	/>
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_6"	
	 />
    <LinearLayout
        android:id="@+id/age_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/age_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.37"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/age_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_3"
	    	/>
        <TextView
            android:id="@+id/yrs_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.65"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/yrs_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
	        android:onClick="showDatePickerDialog"
            />
    </LinearLayout>
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_4"	
	 />
    
	 <LinearLayout
        android:id="@+id/gender_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/gender_label"  
            android:layout_width="0px"
            android:layout_height="wrap_content"      
            android:layout_weight="0.4"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"
	        android:text="@string/gender_label"
	        android:textColor="@color/gray_text"   
	        android:textSize="@dimen/medium_title"
            />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_4"
	    	/>
        <ImageView 
	        android:id="@+id/male_image"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"   
            android:layout_weight="0.35"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"     
	        android:src="@drawable/m_grey"
	        android:contentDescription="@string/male"
	        android:clickable="true" />
        <View style="@style/vertical_divider"
	          android:id="@+id/about_v_divider_4"
	    	/>
        <ImageView 
	        android:id="@+id/female_image"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"   
            android:layout_weight="0.35"  
	        android:paddingTop = "@dimen/cell_padding"
	        android:paddingBottom = "@dimen/cell_padding"
	        android:paddingLeft="@dimen/cell_padding"
	        android:paddingRight="@dimen/cell_padding"     
	        android:src="@drawable/f_grey"
	        android:contentDescription="@string/female" 
	        android:clickable="true"/>
    </LinearLayout>
    
    
    
    <View style="@style/horizontal_divider"
	          android:id="@+id/about_h_divider_5"	
	 />

    <TextView 
	        android:id="@+id/endNote"       
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/end_note"
	        android:textSize="@dimen/small_title"
	        android:paddingTop="@dimen/double_title_padding"
	        android:paddingBottom="@dimen/title_padding"
	        android:textColor="@color/blue_text"       
	    />

</LinearLayout>
</ScrollView>