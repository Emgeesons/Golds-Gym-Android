<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->        
        
    </style>
    
    <!-- general styles for the action bar -->
        
    <!-- style for the tabs -->
	<style name="MyActionBarTabStyle" >
	    <item name="android:background">@drawable/actionbar_background</item>
	    <item name="android:paddingLeft">32dp</item>
	    <item name="android:paddingRight">32dp</item>
	</style>

    <style name="MyActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:actionButtonStyle">@style/ButtonTextStyle</item>
    </style>   
    
    <style name="TabTextStyle">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/buttonbar_text</item>
    </style>

    
    
    
    
    
    
    <style name="horizontal_divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:background">?android:attr/listDivider</item>
	</style>
	<style name="vertical_divider">
	    <item name="android:layout_width">1dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">?android:attr/listDivider</item>
	</style>
</resources>
